generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

model Person {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?

  items    Item[]
  memberOf Member[]
  apiKeys  ApiKey[]
}

model ApiKey {
  id        String   @id @default(uuid())
  name      String
  key       String   @unique @default(uuid())
  createdAt DateTime @default(now())

  person   Person @relation(fields: [personId], references: [id])
  personId String
}

model Group {
  id String @id @default(uuid())

  name String @unique

  members     Member[]
  permissions Permission[]
}

enum MemberRole {
  ADMIN
  MEMBER
}

model Member {
  person   Person @relation(fields: [personId], references: [id])
  personId String

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  role MemberRole

  @@id([personId, groupId])
}

enum Role {
  ADMIN
  CONTRIBUTOR
  READER
}

enum Access {
  PUBLIC
  PRIVATE
}

model Permission {
  id String @id @default(uuid())

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String

  catalog   Catalog? @relation(fields: [catalogId], references: [id])
  catalogId String?

  collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId String?

  role Role
}

// STAC Item
model Item {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // STAC Props
  id         String                   @id @default(uuid())
  geometry   Unsupported("geometry")? // Required, but making it optional allows for prisma.create queries
  properties Json?

  links  Link[]
  assets Asset[]

  // For calculating datetime, start_datetime and end_datetime in item.properties
  datetime       DateTime?
  start_datetime DateTime?
  end_datetime   DateTime?

  // Not STAC but useful
  owner   Person? @relation(fields: [ownerId], references: [id])
  ownerId String?

  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String

  @@index([geometry], name: "location_idx", type: Gist)
}

model Link {
  href  String
  rel   String
  type  String?
  title String?

  item   Item   @relation(fields: [itemId], references: [id])
  itemId String

  @@id([itemId, href])
}

model Asset {
  key         String
  href        String
  title       String?
  description String?
  type        String?
  roles       String[]

  item   Item   @relation(fields: [itemId], references: [id])
  itemId String

  @@id([itemId, key])
}

// STAC Catalog
model Catalog {
  id String @id @default(uuid())

  title       String?
  description String
  links       Json?

  linkedCatalogs Catalog[] @relation(name: "LinkedCatalogs")
  inCatalogs     Catalog[] @relation(name: "LinkedCatalogs")

  collections Collection[]

  access      Access       @default(PRIVATE)
  permissions Permission[]
}

model ExternalCatalog {
  url String @id

  title String?
}

// STAC Collection
model Collection {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String?

  geometry  Unsupported("geometry")?
  startTime DateTime?
  endTime   DateTime?

  items Item[]

  catalog   Catalog @relation(fields: [catalogId], references: [id])
  catalogId String

  permissions Permission[]
}

model Keyword {
  id String @id @default(uuid())

  parent   Keyword?  @relation("parent-child", fields: [parentId], references: [id])
  parentId String?
  children Keyword[] @relation("parent-child")

  title       String
  description String?

  standard   Standard? @relation(fields: [standardId], references: [id])
  standardId String?
}

model Standard {
  id String @id @default(uuid())

  name        String
  description String?

  keywords Keyword[]
}
